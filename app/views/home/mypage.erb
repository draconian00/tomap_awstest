<div class="row" style="margin:0px;">
  <div class="col-lg-3"></div>
  <div class="col-lg-6">
    <div class="row">
      <center><div class="col-lg-3" style="margin-top: 110px;">
        <%if current_user.image.url.nil? %>
          <img src="https://cdn2.iconfinder.com/data/icons/ios-7-icons/50/user_male2-128.png" />
        <%else%>
          <img src="<%=current_user.image.thumb2.url%>" class="img-circle">
        <%end%>
      </div></center>
      <div class="col-lg-9">
        <form>
          <fieldset disabled>
            <div class="form-group" style="width: 100%; margin-top: 100px;">
              <label for="disabledTextInput">Email address</label>
                <input type="text" id="disabledTextInput" class="form-control" value="<%= current_user.email %>">
            </div>  
          </fieldset> 
        </form>
        <form>
          <fieldset disabled>
            <div class="form-group" style="width: 100%;">
              <label for="disabledTextInput">Nickname</label>
                <input type="text" id="disabledTextInput" class="form-control" value="<%= current_user.nickname %>">
            </div>
          </fieldset> 
        </form>
      </div>  
    </div><br>
    <form>
      <fieldset disabled>
        <div class="form-group" style="width: 100%;">
          <label for="disabledTextInput">Phone Number</label>
            <input type="text" id="disabledTextInput" class="form-control" value="<%= current_user.phone_number %>">
        </div>
      </fieldset> 
    </form>
    <form>
      <fieldset disabled>
        <div class="form-group" style="width: 100%;">
          <label for="disabledTextInput">Address</label>
            <input type="text" id="disabledTextInput" class="form-control" value="<%= current_user.living_region %>">
        </div>
      </fieldset> 
    </form>
    <div style="width: 100%; height: 200px; margin-top: 40px;">
        <label>내 시험목록</label>
        <!-- Table -->
          <table class="table" style="border:1px solid #D5D5D5; border-radius: 25px;">
          <thead>
            <tr>
              <th style="text-align:center;">#</th>
              <th style="width:0px;text-align:center;">시험일자</th>
              <th style="text-align:center;">시험장</th>
              <th style="text-align:center;">점수</th>
              <th id="plus" style="text-align:center;cursor:pointer"><b>+</b></th>
            </tr>
          </thead>
          <tbody>
          </tbody>
          </table>
          <script>
            $(function() {
              $("#plus").mouseover(function() {
                $(this).css("background-color","#D5D5D5");
              });
              $("#plus").mouseout(function() {
                $(this).css("background-color","white");
              });
            });
          </script>
    
    <center><a href="/users/edit"><button class="btn  btn-default">개인정보 수정하기</button></a></center>
    </div>
  </div>
  <div class="col-lg-3"></div>
</div>  
